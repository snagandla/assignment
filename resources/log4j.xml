<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>



<appender name="StandardOutAppender" class="org.apache.log4j.ConsoleAppender">
<param name="Target" value="System.out" />
<layout class="org.apache.log4j.PatternLayout">
<param name="ConversionPattern" value=" %m%n" />
</layout>
</appender>

	  <appender name="file" class="org.apache.log4j.RollingFileAppender">
	   <param name="append" value="true" />
	   <param name="maxFileSize" value="5000KB" />
	   <param name="maxBackupIndex" value="10" />
	   <param name="file" value="C:/Desktop/wspace/week8/log/test.log" />
	   <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
	   </layout>
	</appender> 
	
<logger name="logger.file" additivity="false">
   <level value="WARN"/>
   <appender-ref ref="file"/>
</logger>

 <root> 
  
   <level value="INFO" />
     <appender-ref ref="StandardOutAppender" />  
    
  </root>
</log4j:configuration>
